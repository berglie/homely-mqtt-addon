{
  "name": "Homely MQTT",
  "version": "1.1.5",
  "slug": "homely_mqtt",
  "description": "Homely MQTT add-on for Home Assistant with enhanced auto-discovery and fixed MQTT discovery issues",
  "arch": ["amd64", "armv7", "aarch64"],
  "startup": "application",
  "boot": "auto",
  "map": ["config"],
  "options": {
    "mqtt_broker_host": "localhost",
    "mqtt_broker_port": 1883,
    "mqtt_username": "",
    "mqtt_password": "",
    "mqtt_client_id": "homely_mqtt",
    "mqtt_topic_prefix": "homely",
    "log_level": "info",
    "auto_discovery": true,
    "discovery_prefix": "homeassistant",
    "enhanced_auto_discovery": true,
    "include_device_info": true,
    "include_availability": true,
    "retain_discovery": true,
    "discovery_delay": 500,
    "homely_user": "",
    "homely_password": ""
  },
  "schema": {
    "mqtt_broker_host": "str",
    "mqtt_broker_port": "port",
    "mqtt_username": "str",
    "mqtt_password": "str",
    "mqtt_client_id": "str",
    "mqtt_topic_prefix": "str",
    "log_level": "list(debug|info|warn|error)",
    "auto_discovery": "bool",
    "discovery_prefix": "str",
    "enhanced_auto_discovery": "bool",
    "include_device_info": "bool",
    "include_availability": "bool",
    "retain_discovery": "bool",
    "discovery_delay": "int(100,2000)",
    "homely_user": "str",
    "homely_password": "str"
  }
}
